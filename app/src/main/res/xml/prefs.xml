<?xml version="1.0" encoding="utf-8"?><PreferenceScreen    xmlns:android="http://schemas.android.com/apk/res/android">    <ListPreference        android:entries="@array/steering_types_entries"        android:title="Steering type"        android:key="steering_type"        android:defaultValue="seekbar"        android:entryValues="@array/steering_types_values" />    <EditTextPreference        android:singleLine="true"        android:selectAllOnFocus="true"        android:numeric="integer"        android:title="Left"        android:key="left"        android:defaultValue="80" />    <EditTextPreference        android:singleLine="true"        android:selectAllOnFocus="true"        android:numeric="integer"        android:title="Right"        android:key="right"        android:defaultValue="100" />    <EditTextPreference        android:singleLine="true"        android:selectAllOnFocus="true"        android:numeric="integer"        android:title="Interval"        android:key="interval"        android:defaultValue="100" />    <EditTextPreference        android:singleLine="true"        android:selectAllOnFocus="true"        android:title="Address"        android:key="address"        android:defaultValue="192.168.4.1:81" /></PreferenceScreen>